<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] O-BAnk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/Clinic.styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .navbar-nav {
            margin: auto;
            justify-content: center;
        }
    </style>
</head>
<body>
    <header style="text-align:center; background-color:rgba(15, 63, 45, 0.3);">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="text-align:center; font-size:20px; text-align:center; margin-right:20%;">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        @if (ViewBag.IsLogged != null && ViewBag.IsLogged)
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" href="/account/home">
                                    <i class="bi bi-house-fill"></i> Home
                                </a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" href="/Home/about">
                                    <i class="bi bi-info-circle-fill"></i> About
                                </a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" href="/Home/contact_us">
                                    <i class="bi bi-envelope-fill"></i> Contact Us
                                </a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link text-white" href="/Home/servec">
                                    <i class="bi bi-gear-fill"></i> Service
                                </a>
                            </li>
                            <li class="nav-item me-5 dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-person-fill"></i> Profile
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="/account/Setting">Settings</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/account/logout?logout=true">Logout</a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" href="/account/home">
                                    <i class="bi bi-house-fill"></i> Home
                                </a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" href="/Home/about">
                                    <i class="bi bi-info-circle-fill"></i> About
                                </a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" href="/Home/contact_us">
                                    <i class="bi bi-envelope-fill"></i> Contact Us
                                </a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link text-white" href="/Home/servec">
                                    <i class="bi bi-gear-fill"></i> Service
                                </a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link text-white" href="/account/login">
                                    <i class="bi bi-person-fill"></i> Login
                                </a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" href="/account/register">
                                    <i class="bi bi-person-plus-fill"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
